{% extends "base.html.twig" %}
	{% block content %}
	<div id="form">
		<form method="post" action="{{action}}">
				<div>
					<h2>{{form_name}}</h2>
				</div>
				<input name='id' type="hidden" id="id" value="{{id_value}}">
				<label for="nombre">Nombre</label>
				<div>
					<input name="nombre" type="text" id="nombre" value="{{nombre_value}}">
				</div>

				<label for="cif">CIF</label>
				<div>
					<input name="cif" type="text" id="cif" value="{{cif_value}}">
				</div>

				<label for="tipo">Tipo
				</label>
				<div>
					<select name="tipo" id="tipo">
						<option value="0" {{proveedor_selected}}>Proveedor</option>
						<option value="1" {{cliente_selected}}>Cliente</option>
					</select>
				</div>
				<br>
				<input type="submit" name="submit" value="{{value_submit}}">
		</form>
	</div>
	{% endblock %}
			
	
